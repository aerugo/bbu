{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "sourceMap": true,
    "module": "commonjs",
    "declaration": true,
    "target": "es6",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
