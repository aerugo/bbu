{
  "name": "babel-backend",
  "version": "2.0.0",
  "description": "Babel backend - lightweight GraphQL API with file-based data store",
  "main": "build/index.js",
  "types": "./build/index.d.ts",
  "scripts": {
    "build": "./node_modules/.bin/tsc",
    "start": "tsc-watch --onSuccess 'node -r ts-node/register src/index.ts'",
    "start:prod": "node build/index.js",
    "test": "export configuration=\"test\" && nyc --reporter=html --reporter=text mocha --exit -r ts-node/register test/unit/{,**/}*.test.ts",
    "test:integration": "mocha --exit -r ts-node/register test/integration/*.test.ts",
    "lint": "eslint --ext .ts ./src"
  },
  "author": "Blivande",
  "dependencies": {
    "@graphql-tools/schema": "^9.0.0",
    "apollo-server-express": "^2.21.0",
    "apollo-server-plugin-response-cache": "^0.9.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "graphql": "^15.8.0",
    "graphql-tag": "^2.12.6",
    "http-status-codes": "^2.1.4",
    "path": "^0.12.7",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.0",
    "winston-transport": "^4.4.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.15",
    "@types/express": "^4.17.11",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.31",
    "@types/node-fetch": "^2.6.13",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "chai": "^4.3.0",
    "eslint": "^7.20.0",
    "mocha": "^8.3.2",
    "node-fetch": "^2.7.0",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.2.4"
  }
}
